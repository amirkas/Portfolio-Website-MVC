<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio_MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio_MVC.styles.css" asp-append-version="true" />
    
</head>
<body>
    <div class="container-fluid mh-100 ">
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light fixed-top bg-white box-shadow">
            <div class="container-fluid">
        
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Amir Abdou</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Resume" asp-action="Index">Resume</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Education" asp-action="Index">Education</a>
                        </li>
                    </ul>
                </div>
            </div>
                
        </nav>
        
        
        <div class="row">
            <main role="main" class="pb-0" ">
                @RenderBody()
            </main>
        </div>
        <footer class="navbar-expand-sm justify-content-between fixed-bottom bg-white">
            
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa-brands fa-instagram fa-4x"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa-brands fa-linkedin fa-4x"></i>
                        </a>
                    </li>
                </ul>


            </nav>
        </div>


    </div>
        
    
    
        
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
